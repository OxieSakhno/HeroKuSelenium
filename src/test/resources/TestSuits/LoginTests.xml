    <test name="PositiveTests" >
        <parameter name="browser" value="chrome" />
        <parameter name="description" value="Valid username and password" />
        <parameter name="username" value="tomsmith" />
        <parameter name="password" value="SuperSecretPassword!" />
        <parameter name="confirmationMessage" value="You logged into" />

        <classes>
            <class name="com.herokuapp.theinternet.LoginTests">
                <methods>
                    <include name="positiveLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="NegativeUsernameTests">
        <parameter name="browser" value="firefox" />
        <parameter name="description" value="Invalid username and valid password" />
        <parameter name="username" value="wrongUsername" />
        <parameter name="password" value="SuperSecretPassword!" />
        <parameter name="confirmationMessage" value="Your username is invalid" />

        <classes>
            <class name="com.herokuapp.theinternet.LoginTests">
                <methods>
                    <include name="negativeLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>


    <test name="NegativePasswordTest">
        <parameter name="browser" value="explorer" />
        <parameter name="description" value="Valid username and invalid password" />
        <parameter name="username" value="tomsmith" />
        <parameter name="password" value="wrongPassword" />
        <parameter name="confirmationMessage" value="Your password is invalid" />

        <classes>
            <class name="com.herokuapp.theinternet.LoginTests">
                <methods>
                    <include name="negativeLoginTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
